extends layout
block content
    form(method="POST" action="/articles/update/" + article.id)
        label Title
        input(type="text", name="title", value=article.title)

        label Author
        input(type="text",name="author", value=article.author)

        label Body
        textarea(name="body")=article.body

        br
        input(type="submit", value="Submit") 